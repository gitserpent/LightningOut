  <script>

    const appName = 'DIRSCORE:iFrameApp';
    const componentName = 'DIRSCORE:DocumentsLandingPage';
    const lightningEndpoint = 'https://innovation-ability-7744.scratch.my.site.com';
    const targetElement = document.querySelector("[data-lightning-out]");
    const componentAttributes = {

    };

    $Lightning.use(
            appName,
            function (){
              $Lightning.createComponent(
                      componentName,
                      componentAttributes,
                      targetElement,
                      function (cmp){
                        console.log('lightning component created');
                      }
              );
            },
            lightningEndpoint
    );


  </script>
